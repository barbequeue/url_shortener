<h3 class="text-center mb-0 mt-5">Your recent links</h2>
<p class="text-center mb-4">* These are saved in cookies. Be careful cleaning it</p>
<table class="table mb-0">
    <thead>
        <tr>
            <th></th>
            <th scope="col">Full</th>
            <th scope="col">Short</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @links.each do |l| %>
            <tr>
                <td><%= l.created_at.strftime('%d.%m.%Y') %></td>
                <td><%= l.origin %></td>
                <td><%= "#{root_url}#{l.shorthand}" %></td>
                <td><%= link_to 'delete', "/#{l.id}", method: :delete %>
            </tr>
        <% end %>
    </tbody>
</table>
