<div class="w-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>URL-shortener</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <%= form_for @link, as: :link, url: root_path, method: :post do |f| %>
                    <div class="form-group">
                        <%= f.text_field :origin, class: "form-control", placeholder: "Put your link here..." %>
                    </div>
                    <%= f.submit "Create", class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <% @links.each do |l| %>
                    <div class="rounded shadow p-3">
                        <p class="m-0 mb-2"><b>ID:</b> <%= l.id %></p>
                        <p class="m-0 mb-2"><b>Link's origin:</b> <%= l.origin %></p>
                        <p class="m-0"><b>Short link:</b> <%= link_to "#{root_url}#{l.shorthand}", "#{root_url}#{l.shorthand}" %></p>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
